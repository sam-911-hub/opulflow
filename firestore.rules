rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Global functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }
    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      
      // Subcollections
      match /credits/{creditId} {
        allow read: if isSignedIn();
        allow write: if isOwner(userId) || isAdmin();
      }
      
      match /leads/{leadId} {
        allow read, write: if isOwner(userId);
        // Allow team members to read leads
        allow read: if isSignedIn() && exists(/databases/$(database)/documents/team_members/$(request.auth.uid + '_' + userId));
      }
      
      match /apiKeys/{keyId} {
        allow read, write: if isOwner(userId);
        // Prevent reading API keys even by team members for security
      }
      
      match /transactions/{transactionId} {
        allow read: if isOwner(userId) || isAdmin();
        // Only allow creation, not modification
        allow create: if isOwner(userId);
        allow update, delete: if false;
      }
      
      match /emailSequences/{sequenceId} {
        allow read: if isOwner(userId) || 
                     (isSignedIn() && exists(/databases/$(database)/documents/team_members/$(request.auth.uid + '_' + userId)));
        allow write: if isOwner(userId);
      }
      
      match /workflows/{workflowId} {
        allow read: if isOwner(userId) || 
                     (isSignedIn() && exists(/databases/$(database)/documents/team_members/$(request.auth.uid + '_' + userId)));
        allow write: if isOwner(userId);
      }
      
      match /aiGenerations/{generationId} {
        allow read: if isOwner(userId) || 
                     (isSignedIn() && exists(/databases/$(database)/documents/team_members/$(request.auth.uid + '_' + userId)));
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }
    }
    
    // Team members collection
    match /team_members/{memberId} {
      allow read: if isSignedIn();
      // Only allow team owners to add/remove members
      allow create, delete: if isSignedIn() && 
                             memberId.split('_')[1] == request.auth.uid;
      allow update: if false; // Immutable once created
    }
    
    // Shared workflows collection
    match /shared_workflows/{workflowId} {
      allow read: if isSignedIn();
      // Only allow workflow owners to share
      allow create: if isSignedIn() && 
                    exists(/databases/$(database)/documents/users/$(request.auth.uid)/workflows/$(workflowId.split('_')[0]));
      allow update, delete: if isSignedIn() && 
                            request.resource.data.ownerId == request.auth.uid;
    }
    
    // Admin collection
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Analytics collection - admin only
    match /analytics/{document=**} {
      allow read: if isAdmin();
      allow write: if false; // Only writable via server functions
    }
  }
}